
<% if flash[:errors] %>
    <% flash[:errors].each do |message| %>
        <%= message %>
    <% end %>
<% end %>

<%= form_for(@duck) do |f| %>
    <%= f.label "Name: " %>
    <%= f.text_field :name %><br>

    <%= f.label "Mod: " %>
    <%= f.number_field :mod %>

    <%= f.submit "Submit" %>
<% end %>